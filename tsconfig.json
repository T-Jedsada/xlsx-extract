{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": ".",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "typings/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types/**/*",
      "node_modules/**/*",
      "typings/**/*"
    ]
  },
  "include": [
    "src/types.ts",
    "typings/**/*",
    "src/**/*"
  ],
  "exclude": [
    "bin",
    "lib",
    "data",
    "local",
    "dist",
    "**/*.spec.ts"
  ]
}
