{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist/lib",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "typings/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types/**/*",
      "typings/**/*"
    ]
  },
  "include": [
    "src/types.ts",
    "typings/**/*",
    "src/**/*"
  ],
  "exclude": [
    "./node_modules/**/*.tsx",
    "node_modules/**/*.ts",
    "node_modules",
    "bin",
    "lib",
    "data",
    "local",
    "dist",
    "**/*.spec.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true,
    "transpileOnly": true
  }
}
